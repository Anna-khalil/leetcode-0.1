#include<iostream>
#include<vector>
using namespace std;

int main() {
    int n;
    cin>>n;
    vector<int> nums(n,0);
    vector<int> sum(n,0);
    cin >> nums[0];
    sum[0] = nums[0];

    for(int i = 1; i < n; i++ ) {
        cin >> nums[i];
        sum[i] = sum[i-1] + nums[i];
    }
    
    int a,b;
    while(~scanf("%d%d",&a,&b)) {
        if( a == 0 ) printf("%d\n",sum[b]);
        else printf("%d\n",sum[b] - sum[a - 1]);
    }
    return 0;
    }
