#include<iostream>
#include<vector>
using namespace std;

const int N = 1E5;

int main()
{
    int n;
    cin>>n;
    vector<int> arr(n);
    vector<int> psum(n);
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
        psum[i] = psum[i-1] + arr[i];
    }

     int a,b;
     while (~scanf("%d%d", &a, &b)) {
        int sum;
        if (a == 0) sum = psum[b];
        else sum = psum[b] - psum[a - 1];
        printf("%d\n", sum);
    }
}